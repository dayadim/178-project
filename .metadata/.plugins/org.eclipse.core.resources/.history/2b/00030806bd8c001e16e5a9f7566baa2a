#include <system.h>
#include <stdio.h>
#include "sys/alt_stdio.h"
#include "altera_avalon_pio_regs.h"

int main() {
    printf("Reading Keys...\n");

    while (1) {
        int keys_value = IORD_ALTERA_AVALON_PIO_DATA(KEYS_BASE);

        if (keys_value != 0) {
            printf("Keys Value: %d\n", keys_value);
        }
        keys_value = 0;
    }
    return 0;
}
